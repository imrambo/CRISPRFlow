<system inter_gene_max_space="5" min_mandatory_genes_required="1" min_genes_required="1">

#Present in all CRISPR-Cas systems
<gene name="Cas1_0_I-II-III" presence="accessory"  system_ref="CAS"/>
<gene name="Cas2_0_I-II-III" presence="accessory"  system_ref="CAS"/>
<gene name="Cas2_0_I-II-III-V" presence="accessory"  system_ref="CAS"/>
<gene name="Cas1_0_I-II-III-V" presence="accessory"   system_ref="CAS"/>

#Present in Type II
<gene name="Cas1_0_II" presence="accessory"/>

#Specific to Type IIC
<gene name="Cas9_0_II" presence="mandatory" loner="1" exchangeable="1">
	<homologs>
		<gene name="Cas9_1_II" presence="mandatory" loner="1"/>
	</homologs>
</gene>

#Sometimes associated with Type IIC
<gene name="Cas6_0_I-III" presence="accessory"  system_ref="CAS"/>
<gene name="Cas3_1_I" presence="accessory"  system_ref="CAS"/>
<gene name="Cas3_0_I" presence="accessory"  system_ref="CAS"/>

#Distinguishing from other Type II	
<gene name="Cas9_0_IIB" presence="forbidden"  system_ref="CAS-TypeIIB"/>
<gene name="Csn2_0_IIA" presence="forbidden"   system_ref="CAS-TypeIIA"/>
<gene name="Cas4_0_I-II" presence="forbidden"  system_ref="CAS"/>

#Distinguishing from other Types
<gene name="Cas5_0_I" presence="forbidden"  system_ref="CAS"/>


</system>
